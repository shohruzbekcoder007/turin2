doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="shortcut icon" href="#")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css' integrity='sha512-8bHTC73gkZ7rZ7vpqUQThUDhqcNFyYi2xgDgPDHc+GXVGHXq+xPjynxIopALmOPqzo9JZj0k6OqqewdGO3EsrQ==' crossorigin='anonymous' referrerpolicy='no-referrer')
        link(rel='stylesheet' href='/css/basic.css')
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        script(src='https://unpkg.com/axios/dist/axios.min.js')
        title Users
    body 
        include includes/header.pug
        .ui.bottom.attached.segment
            include includes/sidebar.pug
            .pusher
                .ui.basic.segment
                    .container(ng-app='myApp', ng-controller='namesCtrl').crud-table
                        .clearfix
                            .form-inline.pull-left
                                button.btn.btn-success#newuser
                                    span.glyphicon.glyphicon-plus 
                                    | Add new user
                        table.table.table-striped
                            thead
                                tr
                                    th firstName
                                    th lastName
                                    th email
                                    th phone
                                    th role
                                    th createdAt
                                    th updatedAt
                                    th
                            tbody.text-center#usebody
                        section.dn#createuser
                            .container
                                .row.justify-content-center
                                .col-12.col-md-8.col-lg-8.col-xl-6
                                    .row
                                    .col.text-center.title
                                        h1 Create New User
                                    .row.align-items-center
                                        .col.mt-4
                                            input.form-control(type='text', id='firstName' placeholder='firstName')
                                    .row.align-items-center.mt-4
                                        .col
                                            input.form-control(type='text', id='lastName' placeholder='lastName')
                                    .row.align-items-center.mt-4
                                        .col
                                            input.form-control(type='email', id='email' placeholder='email')
                                    .row.align-items-center.mt-4
                                        .col
                                            input.form-control(type='phone', id='phone' placeholder='phone')
                                    .row.align-items-center.mt-4
                                        .col
                                            input.form-control(type='password', id='password' placeholder='password')
                                        .col
                                            input.form-control(type='text', id='role' placeholder='role')
                                    .row.justify-content-start.mt-4
                                        .col
                                            button.btn.btn-primary.mt-4#createuserbtn Create
                        section.dn#updateuser
                            .container
                                .row.justify-content-center
                                .col-12.col-md-8.col-lg-8.col-xl-6
                                    .row
                                    .col.text-center.title
                                        h1 Update User
                                    .row.align-items-center
                                        .col.mt-4
                                            input.form-control(type='text', id='updatefirstName' placeholder='firstName')
                                    .row.align-items-center.mt-4
                                        .col
                                            input.form-control(type='text', id='updatelastName' placeholder='lastName')
                                    .row.align-items-center.mt-4
                                        .col
                                            input.form-control(type='email', id='updateemail' placeholder='email')
                                    .row.align-items-center.mt-4
                                        .col
                                            input.form-control(type='phone', id='updatephone' placeholder='phone')
                                    .row.align-items-center.mt-4
                                        .col
                                            input.form-control(type='text', id='updaterole' placeholder='role')
                                    .row.justify-content-start.mt-4
                                        .col
                                            button.btn.btn-primary.mt-4#updateuserbtn Update
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js', integrity='sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==', crossorigin='anonymous', referrerpolicy='no-referrer')
        script(src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js")
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js')
        script(src='/js/main.js')
        script(src='/js/basic/basic1.js')